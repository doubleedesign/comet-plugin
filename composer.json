{
	"name": "doubleedesign/comet-plugin",
	"type": "wordpress-plugin",
	"description": "WordPress plugin implementing the Comet Components library and associated block editor customisations.",
	"version": "0.0.2",
	"homepage": "https://cometcomponents.io",
	"authors": [
		{
			"name": "Leesa Ward",
			"email": "leesa@doubleedesign.com.au"
		}
	],
	"autoload": {
		"psr-4": {
			"Doubleedesign\\Comet\\WordPress\\": "src/"
		}
	},
	"require": {
		"doubleedesign/comet-components-core": "*",
		"composer/installers": "^2.0"
	},
	"minimum-stability": "dev",
	"prefer-stable": true,
	"repositories": [
		{
			"type": "path",
			"url": "../core",
			"options": {
				"symlink": true
			}
		},
		{
			"type": "vcs",
			"url": "https://github.com/doubleedesign/baguetteBox.js"
		}
	],
	"config": {
		"allow-plugins": {
			"composer/installers": true
		}
	}
}
