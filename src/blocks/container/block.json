{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "comet/container",
	"title": "Container",
	"category": "layout",
	"icon": "align-wide",
	"parent": [
		null
	],
	"description": "Create a section that controls the maximum width of its contents, can have a background colour, etc.",
	"editorStyle": [
		"comet-container-style"
	],
	"attributes": {
		"size": {
			"type": "string",
			"enum": [
				"default",
				"fullwidth",
				"wide",
				"narrow"
			],
			"default": "default"
		},
		"tagName": {
			"type": "string",
			"default": "section",
			"enum": [
				"section",
				"div",
				"main"
			]
		}
	},
	"supports": {
		"anchor": true,
		"color": {
			"gradients": true,
			"text": false,
			"background": true,
			"__experimentalDefaultControls": {
				"background": true
			}
		}
	},
	"editorScript": "file:./index.js"
}
