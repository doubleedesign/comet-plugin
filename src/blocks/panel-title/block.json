{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "comet/panel-title",
	"title": "Panel title/label",
	"editorScript": "file:./index.js",
	"parent": [
		"comet/panel"
	],
	"usesContext": [
		"comet/variant"
	],
	"category": "text",
	"icon": "tag",
	"description": "Title/label for a panel in an accordion or tabbed interface",
	"keywords": [
		"accordion",
		"tabs"
	],
	"textdomain": "comet",
	"attributes": {
		"content": {
			"type": "rich-text",
			"source": "rich-text",
			"selector": "span",
			"role": "content"
		},
		"placeholder": {
			"type": "string",
			"default": "Add panel title here..."
		}
	}
}
